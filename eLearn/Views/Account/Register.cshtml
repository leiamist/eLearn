@using eLearn.Data;
@model RegisterViewModel

@{
    ViewData["Title"] = "Registro de nuevo usuario";
}

<h2>@ViewData["Title"]</h2>

<div class="row formulario">
    <div class="col-md-12 formulario">
        <center>
            <section>
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4>Crea una cuenta nueva.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaternalName"></label>
                    <input asp-for="PaternalName" class="form-control" />
                    <span asp-validation-for="PaternalName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaternalName"></label>
                    <input asp-for="MaternalName" class="form-control" />
                    <span asp-validation-for="MaternalName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Role"></label>
                    <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<RoleEnumViewModel>()"></select>
                </div>
                <button type="submit" class="btn btn-default">Registrar</button>
                </form>
            </section>
        </center>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
